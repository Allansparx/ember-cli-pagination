<table class="table">
  <tr>
    <th>Name</th>
    <th>Completed</th>
  </tr>

  {{#each content}}
    <tr class="todo">
      <td>{{name}}</td>
      <td>
        {{input type="checkbox" checked=completed}}
      </td>
    </tr>
  {{/each}}
</table>

{{page-numbers-inner content=content action="pageClicked"}}

<button {{action "save"}}>Save</button>

<div class="numRemoteCalls">
  {{content.numRemoteCalls}}
</div>

{{outlet}}